<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_background"
        tools:context=".Activities.SignUp">
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pb_signup" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            android:indeterminate="true"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/srivanmayilog"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/pb_signup" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_signup"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:id="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/guideline_signup">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person_outline"
                android:id="@+id/imageView3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <View
                android:layout_width="@dimen/view_line_size"
                android:layout_height="0sp"
                android:id="@+id/view3"
                android:background="@color/colorWhite"
                app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edt_signup_userid"
                app:layout_constraintStart_toEndOf="@+id/view3" android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="@+id/view3"
                app:layout_constraintBottom_toBottomOf="@+id/view3" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:background="@drawable/edittext_nullbackground" android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" android:hint="@string/user_mobile"
                android:textSize="@dimen/sp14_space"/>
        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_line_size"
                android:id="@+id/view5" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:background="@color/colorWhite" app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="@string/gen_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_generateotp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:background="@drawable/button_background"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
    />
</android.support.constraint.ConstraintLayout>